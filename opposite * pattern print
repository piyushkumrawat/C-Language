#include <stdio.h>

int main ()
{
  int i, j, n;
  printf("Enter no. of rows ");
  scanf("%d",&n);
  for(i=0;i<n;i++){
      for(j=0;j<i&&j<n-1;j++){
          printf(" ");
      }
      for(j=i;j<n;j++){
          printf("*");
      }
      printf("\n");
  }
  
  for(i=0;i<=n;i++){
      
      for(j=1;j<=i;j++){
          printf("*");
      }
      printf("\n");
  }
  return 0;
}
