#include <stdio.h>

int main()
{
    int a,b,i,j;
    printf("Enter no. of rows ");
    scanf("%d",&i);
    
    printf("Enter no. of columns ");
    scanf("%d",&j);
    
    for(a=1;a<=i;a++)
    {
        for(b=1;b<=j;b++)
        {
            if((a==1)||(b==1)||(a==i/2+1)||(b==j))
            {
                printf("*");
            }
            else{
                printf(" ");
            }
            
        }
        printf("\n");
    }

    return 0;
}
